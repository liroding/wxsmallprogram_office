/* pages/index_bakcup/index.wxss */
@import '/lib/weui.wxss';
.context{
  width: 100%;
  height: 35%;
  margin:8px;
  display: flex;
  flex-direction:row;
  justify-content:flex-start;
  flex-wrap:nowrap;
  margin-bottom:40px; 

  background-color:white;
}

.box{
  width: 22%;
  height: 80px;
  margin: 10px;
  border-color:blue;
  background-color:rgba(255, 0, 0, 0);
}
.hover_outer{
  background: red;
}
.img{
  width: 100%;
  height: 100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.placeholder{
  margin: 10px;
  padding: 0 10px;
  text-align: center;
  background-color: rgb(247, 242, 242);
  height: 2.3em;
  line-height: 2.3em;
  color: rgba(0,0,0,.3);
  color: rgb(172, 51, 51);
  font-size: 22px;
}

.section{
  border-style:solid;
  box-shadow:2rpx 2rpx 2rpx 2rpx rgb(243, 237, 237);
  border-width: 0rpx;
  width: 80%;
  height:110rpx;
  margin:20rpx 20rpx 1rpx 60rpx;
  background-color:#ffffff;
  display: flex;
}

.userinfo-avatar {
  overflow: hidden;
   width: 80rpx;
   height: 80rpx;
   margin: 20rpx;
   border-radius: 50%;
   display: flex;
   padding: 1rpx 1rpx 1rpx 1rpx;
 }

.value {
  font-size: 30rpx;
  padding-top: 2rpx;
  color: #fd9900;
  display: flex;
  padding: 10rpx 1rpx 1rpx 1rpx;
  padding-right:10px;
}

.caption {
  margin-top: 0rpx;
  color: rgb(170, 70, 70);
  font-size: 25rpx;
  display: flex;
  padding: 1rpx 1rpx 1rpx 1rpx;
}
